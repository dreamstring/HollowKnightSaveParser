<ui:FluentWindow x:Class="HollowKnightSaveParser.Views.TagEditDialog"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
                 Title="{DynamicResource EditBackupTagDialogTitle}"
                 Width="400" Height="200"
                 WindowStartupLocation="CenterOwner"
                 ResizeMode="NoResize"
                 WindowStyle="SingleBorderWindow">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- 标题 -->
        <TextBlock Grid.Row="0" 
                   Text="{DynamicResource SetCustomTagForBackup}"
                   FontSize="16" FontWeight="SemiBold"
                   Margin="0,0,0,16" />

        <!-- 文件名显示 -->
        <TextBlock Grid.Row="1"
                   Text="{Binding FileName}"
                   FontSize="12"
                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                   Margin="0,0,0,16" />

        <!-- 标签输入 -->
        <StackPanel Grid.Row="2">
            <TextBlock Text="{DynamicResource CustomTag}" Margin="0,0,0,8" />
            <TextBox x:Name="TagTextBox"
                     Text="{Binding Tag, UpdateSourceTrigger=PropertyChanged}"
                     FontSize="14"
                     Height="36"
                     MaxLength="50"
                     ToolTip="{DynamicResource TagEditTooltip}" />
            <TextBlock Text="{DynamicResource EmptyToRemoveTag}"
                       FontSize="11"
                       Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                       Margin="0,4,0,0" />
        </StackPanel>

        <!-- 按钮 -->
        <StackPanel Grid.Row="3" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,20,0,0">
            <ui:Button Content="{DynamicResource OK}" 
                       Click="OkButton_Click"
                       Appearance="Secondary"
                       Width="80" Height="32"
                       Margin="0,0,8,0" />
            <ui:Button Content="{DynamicResource Cancel}" 
                       Click="CancelButton_Click"
                       Appearance="Secondary"
                       Width="80" Height="32" />
        </StackPanel>
    </Grid>
</ui:FluentWindow>
